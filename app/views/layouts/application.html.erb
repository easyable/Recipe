<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>Recipes</title>
<%= csrf_meta_tag %>
<%= stylesheet_link_tag 'default.css' %>
<%= javascript_include_tag 'jquery-1.4.3.min', 'rails', 'application' %>

</head>
<body>
<div id="header">
	<h1>Recipes</h1>
	<h2><div id="user_bar">
	      <% if logged_in? %> 
		    <%= link_to "New Recipe", new_recipe_path %> | 
		    <%= link_to "Edit Password", edit_user_path(current_user) %> | 
		    <%= link_to "Logout", logout_path %> |
		    <%= link_to_function("Print this Page", "javascript:print()") %>
	      <% else %> 
	        <%= link_to "Login", login_path %> |
		    <%= link_to "Register", register_path %> |
		    <%= link_to_function("Print this Page", "javascript:print()") %>
	      <% end %> 
	    </div>
	</h2>
</div>
<div id="menu">
	<ul>
		<li class="<%=is_active?("home") %>">
			<%= link_to('/home_path') do %>
			    <span>Home Page</span>
			<% end %>
		</li>
		<li class="<%=is_active?("about") %>">
			<%= link_to('about_path') do %>
				<span>About Us</span>
			<% end %>
		</li>
		<li class="<%=is_active?("recipes") %>">
			<%= link_to('recipes_path') do %>
				<span>Recipes</span>
			<% end %>
		  </li>
		<li class="<%=is_active?("services") %>">
			<%= link_to('services_path') do %>
				<span>Services</span>
			<% end %>
		  </li>
		<li class="<%=is_active?("contact") %>">
			<%= link_to('contact_path') do %>
				<span>Contact Us</span>
			<% end %>
		  </li>
	</ul>
</div>
<div id="splash"><img src="/images/img2.jpg" alt="" width="514" height="213" /></div>
<div id="content" class="bg2">
<%= yield %>
</div>
<div id="footer" class="bg3">
	<p>Copyright &copy; 2011 ezable.com. Designed by <a href="http://freecsstemplates.org"><strong>EZ Able Web Dev</strong></a></p>
</div>
</body>
</html>
