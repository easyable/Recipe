<%= div_for recipe do %> 
  <h3>
    <%= link_to recipe.title, recipe %
    <% if recipe.owned_by? current_user %> 
    <span class='actions'>
      <%= link_to "Edit", edit_recipe_path(recipe) %>
      <%= link_to "Delete", recipe, :confirm => "Are you sure?", 
:method => :delete %>
    </span> 
  </h3>
<% end %>